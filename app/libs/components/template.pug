mixin array(name, nameShown, value, root, level, remove, unique, panelLevel)
    - tag = "h"+ (level+1)
    if name == ''
        - root = root.slice(0,-1)
    - val = value[0]
    //TODO do some checks
    if val instanceof Array
        - addValue = "[]"
    else if typeof (val) == 'object'
        - addValue = []
        each val2, index2 in val
            if(val2 instanceof Array)
                - addValue.push(index2+':[]')
            else if(typeof(val2) == 'object')
                - addValue.push(index2+':{}')
            else
                - addValue.push(index2+':\'\'')
        - addValue = "{"+addValue+"}"
    div
        #{tag} Array of data #{nameShown}
        button(ng-click=root + name+".push("+addValue+")") Add element
        div("ng-repeat"='(key'+level+',value'+level+') in '+root + name)
            if val instanceof Array
                if(val.title == "text" )
                    +array('', '{{' + root + name + '[key' + level + '].title | title}}', val, root+name+'[key'+level+'].', level+1, root + name+".remove(key"+level+")",unique+'-{{key'+level+'}}-', panelLevel)
                else
                    +array('', 'Section', val, root+name+'[key'+level+'].', level+1, root + name+".remove(key"+level+")",unique+'-{{key'+level+'}}-', panelLevel)
                    //TODO a better name
            else if typeof (val) == 'object'
                if(val.title == "text" )
                    +object('{{'+root + name+'[key'+level+'].title | title }}', val,root+name+'[key'+level+'].', level+1, root + name+".remove(key"+level+")",unique+'-{{key'+level+'}}-', panelLevel)
                else
                    +object('Section', val,root+name+'[key'+level+'].', level+1, root + name+".remove(key"+level+")",unique+'-{{key'+level+'}}-', panelLevel)
                    //TODO a better name
        if remove != ''
            button(ng-click=remove) Remove

mixin object(name, obj, root, level, remove, unique, panelLevel)
    - tag = "h"+ (level+1)
    div(class=panel(panelLevel))
        .panel-heading
            #{tag}.panel-title
                a(data-toggle="collapse" href="#" data-target="#"+unique) #{name}
        .panel-collapse.collapse(id=unique)
            .panel-body
                each val, index in obj
                    if val instanceof Array
                        +array(index, index, val, root, level+1, '',unique+index, panelLevel+1)
                    else if typeof (val) == 'object'
                        +object(index, val, root+index+'.', level+1, '',unique+index, panelLevel+1)
                    else if val.indexOf('|') !== -1
                        +or(index, root, unique + index)
                    else if val == "text"
                        +text(index, root, unique+index)
                    else if val == "youtube"
                        +youtube(index, root, unique+index)
                    else if val == "img"
                        +img(index, root, unique+index)
                if remove != ''
                    button(ng-click=remove) Remove

