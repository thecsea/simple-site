        - addValue = "[]"
    else if typeof (val) == 'object'
        - addValue = []
        each val2, index2 in val
            if(val2 instanceof Array)
                - addValue.push(index2+':[]')
            else if(typeof(val2) == 'object')
                - addValue.push(index2+':{}')
            else
                - addValue.push(index2+':\'\'')
